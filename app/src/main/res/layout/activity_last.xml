<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eminz.Activity.LastActivity"

    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toollast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0091EA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Details"
        app:titleTextColor="@color/white"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cards"
        android:layout_width="376dp"
        android:layout_height="280dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        app:cardElevation="3dp"
        app:contentPaddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="349dp"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.google.android.material.chip.Chip
                android:id="@+id/display_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:hint="Contacts"
                android:minHeight="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/display_messageDates"
                android:layout_width="118dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:background="@color/teal_700"
                android:text="TextView"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/display_names"
                app:layout_constraintTop_toBottomOf="@+id/display_names" />

            <TextView
                android:id="@+id/display_messageTimes"
                android:layout_width="118dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:text="Textview"
                android:textColor="#757575"
                app:layout_constraintStart_toStartOf="@+id/display_names"
                app:layout_constraintTop_toBottomOf="@+id/display_messageDates" />

            <TextView
                android:id="@+id/display_messages"
                android:layout_width="296dp"
                android:layout_height="85dp"
                android:layout_marginTop="16dp"
                android:paddingStart="20dp"
                android:text="textview"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/display_names"
                app:layout_constraintTop_toBottomOf="@+id/display_messageTimes" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>